{
  "name": "vite-plugin-modular-tailwindcss",
  "version": "0.3.0",
  "license": "MIT",
  "author": {
    "name": "SegaraRai"
  },
  "homepage": "https://github.com/SegaraRai/vite-plugin-modular-tailwindcss#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/SegaraRai/vite-plugin-modular-tailwindcss.git"
  },
  "keywords": [
    "tailwindcss",
    "vite",
    "vite-plugin"
  ],
  "publishConfig": {
    "provenance": true
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs.js",
      "import": "./dist/index.es.js"
    },
    "./client": {
      "types": "./dist/client.d.ts"
    }
  },
  "scripts": {
    "dev": "pnpm --filter *playground dev",
    "build": "vite build && tsc -b",
    "lint": "eslint . && prettier -c .",
    "test": "vitest",
    "changesets-version": "changesets version && pnpm i --lockfile-only",
    "changesets-publish": "pnpm publish -r && git push --follow-tags"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@eslint/js": "^9.9.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.14.15",
    "@vitest/ui": "^2.0.5",
    "eslint": "^9.9.0",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.0.0",
    "tailwindcss": "^3.4.9",
    "taze": "^0.16.5",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.1.0",
    "vite": "^5.4.0",
    "vite-plugin-dts": "4.0.0-beta.2",
    "vite-plugin-externalize-deps": "^0.8.0",
    "vitest": "^2.0.5"
  },
  "peerDependencies": {
    "tailwindcss": "^3.0.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "parse-imports": "^2.1.1"
  }
}
